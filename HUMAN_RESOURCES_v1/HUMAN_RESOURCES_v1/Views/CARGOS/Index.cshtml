@model IEnumerable<HUMAN_RESOURCES_v1.Models.CARGO>

@{
    ViewBag.Title = "Index";
}
<center>
    <h3>Lsitado de Cargos</h3>
</center>

<p>
    @Html.ActionLink("Crear Nuevo Cargo", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_cargo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_cargo)
                </td>
                <td class="btn-group">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_cargo }, htmlAttributes: new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.id_cargo }, htmlAttributes: new { @class = "btn btn-success" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_cargo }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>