@model IEnumerable<HUMAN_RESOURCES_v1.Models.NOMINA>

@{
    ViewBag.Title = "Index";
}

<h3>Listado de Nominas</h3>

<p>
    @Html.ActionLink("Crear Nueva Nomina", "Create",null,htmlAttributes:new {@class="btn btn-primary" })
</p>
<div class="table-responsive">
    <table class="table table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fecha_nomina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto_total)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_nomina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.monto_total)
                </td>
                <td class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.id_codigo }, htmlAttributes: new { @class = "btn btn-warning" })
                    @Html.ActionLink("Details", "Details", new { id = item.id_codigo }, htmlAttributes: new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.id_codigo }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
